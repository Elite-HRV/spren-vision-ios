{
  "name": "react-native-spren",
  "version": "1.0.1",
  "description": "React Native module wrapping Spren",
  "main": "react-native/lib/commonjs/index",
  "module": "react-native/lib/module/index",
  "types": "react-native/lib/typescript/index.d.ts",
  "react-native": "react-native/src/index",
  "source": "react-native/src/index",
  "files": [
    "Framework",
    "Sources",
    "react-native/src",
    "react-native/lib",
    "react-native/android",
    "react-native/ios",
    "react-native/cpp",
    "react-native-spren.podspec",
    "!react-native/lib/typescript/example",
    "!react-native/android/build",
    "!react-native/ios/build",
    "!react-native/**/__tests__",
    "!react-native/**/__fixtures__",
    "!react-native/**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "spren",
    "react-native",
    "ios"
  ],
  "repository": "https://github.com/Elite-HRV/spren-ios-sdk",
  "author": "nick <nick@elitehrv.com> (https://github.com/Elite-HRV)",
  "license": "LicenseRef-LICENSE",
  "bugs": {
    "url": "https://github.com/Elite-HRV/spren-ios-sdk/issues"
  },
  "homepage": "https://github.com/Elite-HRV/spren-ios-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.2",
    "release-it": "^14.2.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "react-native/lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "react-native/src",
    "output": "react-native/lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "react-native/tsconfig.build.json"
        }
      ]
    ]
  }
}
